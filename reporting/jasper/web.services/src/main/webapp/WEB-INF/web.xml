<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>FlowFrame Reporting</display-name>
  	<context-param>
		<param-name>contextClass</param-name>
		<param-value>org.eclipse.virgo.web.dm.ServerOsgiBundleXmlWebApplicationContext</param-value>
	</context-param>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/module-context.xml,/WEB-INF/osgi-context.xml</param-value>
	</context-param>
	
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
		
	<servlet>
		<servlet-name>PdfReportingServlet</servlet-name>
		<servlet-class>org.flowframe.reporting.jasper.web.services.web.service.servlet.PdfReportingServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PdfReportingServlet</servlet-name>
		<url-pattern>/pdfgen</url-pattern>
	</servlet-mapping>
</web-app>
