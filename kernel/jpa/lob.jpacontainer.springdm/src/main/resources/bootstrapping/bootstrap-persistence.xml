<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                                http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">

    <persistence-unit name="pu">
        <!--
        Bootstrap persistence unit used only to create a placeholder for modular persistence.xml
        files. Any persistence unit that starts with this name will be merged in a single
        persistence unit, allowing for true modular configuration.
        -->
    </persistence-unit>
</persistence>
