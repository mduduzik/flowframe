<?xml version="1.0" encoding="UTF-8"?>
<!--
	Application context definition for FF ETl Repository DB Server.
-->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans.xsd
  http://www.springframework.org/schema/context
  http://www.springframework.org/schema/context/spring-context.xsd"
        >
    <!-- Flowframe props -->
    <context:property-placeholder properties-ref="configAdminProperties"/>

    <!-- Flowframe Liferay ECM API-->
    <bean id="lplDocLibService" class="org.flowframe.documentlibrary.remote.services.impl.LiferayPortalDocumentRepositoryImpl" init-method="init">
        <property name="repositoryId" value="${ff.docrepo.repository.id}"/>
        <property name="companyId" value="${ff.docrepo.repository.companyid}"/>
        <property name="fflogiFolderId" value="${ff.docrepo.repository.main.folderid}"/>
        <property name="loginEmail" value="${ff.docrepo.user.email}"/>
        <property name="loginPassword" value="${ff.docrepo.user.password}"/>
        <property name="hostname" value="${ff.docrepo.server.hostname}"/>
        <property name="port" value="${ff.docrepo.server.port}"/>
        <property name="loginGroupId" value="${ff.docrepo.user.group.id}"/>
    </bean>

    <!-- Repo Impl -->
    <bean id="dbRepoImpl" class="org.flowframe.etl.pentaho.server.repository.db.repository.DBRepositoryWrapperImpl" init-method="init" scope="singleton">
        <property name="reponame" value="${ff.etl.repo.name}"/>
        <property name="repodescription" value="${ff.etl.repo.description}"/>
        <property name="username" value="${ff.etl.repo.user.name}"/>
        <property name="userpassword" value="${ff.etl.repo.user.pwd}"/>
        <property name="userfullname" value="${ff.etl.repo.user.fullname}"/>
        <property name="dbhostname" value="${ff.etl.repo.database.hostname}"/>
        <property name="dbusername" value="${ff.etl.repo.database.username}"/>
        <property name="dbuserpassword" value="${ff.etl.repo.database.pwd}"/>
        <property name="dbtype" value="${ff.etl.repo.database.type}"/>
        <property name="dbname" value="${ff.etl.repo.database.name}"/>
        <property name="dbport" value="${ff.etl.repo.database.port}"/>
    </bean>


    <!--
        DAO's
    -->
    <bean id="databaseMetaDAO" class="org.flowframe.etl.pentaho.server.repository.db.resource.DatabaseMetaResource" scope="request"/>
    <bean id="databaseTypeDAO" class="org.flowframe.etl.pentaho.server.repository.db.resource.DatabaseTypeResource" scope="request"/>
    <bean id="repositoryExplorer" class="org.flowframe.etl.pentaho.server.repository.db.resource.RepositoryExplorerResource" scope="request"/>
    <bean id="charSet" class="org.flowframe.etl.pentaho.server.repository.db.resource.reference.CharsetEncodingResource" scope="request"/>
    <!--
       CSVInput
    -->
<!--
    <bean class="org.flowframe.etl.pentaho.repository.db.resource.etl.trans.steps.csvinput.CSVInputDialogDelegateResource" scope="request"/>
-->
</beans>
