<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>org.flowframe.thirdparty.pentaho5.pentaho-reporting-engine</artifactId>
        <groupId>org.flowframe</groupId>
        <version>0.0.1</version>
        <relativePath>..</relativePath>

    </parent>
    <modelVersion>4.0.0</modelVersion>
    <version>${wrapped.version}</version>
    <properties>
        <wrapped.version>5.0.2</wrapped.version>
    </properties>
    <artifactId>org.flowframe.thirdparty.pentaho5.pentaho-reporting-engine.pentaho-reporting-engine-all</artifactId>
    <dependencies>
        <dependency>
            <groupId>pentaho-reporting-engine</groupId>
            <artifactId>pentaho-reporting-engine-classic-core</artifactId>
            <version>${wrapped.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>pentaho-reporting-engine</groupId>
            <artifactId>pentaho-reporting-engine-classic-extensions</artifactId>
            <version>${wrapped.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>pentaho-reporting-engine</groupId>
            <artifactId>pentaho-reporting-engine-classic-extensions-scripting</artifactId>
            <version>${wrapped.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>pentaho-reporting-engine</groupId>
            <artifactId>pentaho-reporting-engine-classic-extensions-reportdesigner-parser</artifactId>
            <version>${wrapped.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>pentaho-reporting-engine</groupId>
            <artifactId>pentaho-reporting-engine-classic-extensions-drill-down</artifactId>
            <version>${wrapped.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>pentaho-reporting-engine</groupId>
            <artifactId>pentaho-reporting-engine-classic-extensions-olap4j</artifactId>
            <version>${wrapped.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>pentaho-reporting-engine</groupId>
            <artifactId>pentaho-reporting-engine-classic-extensions-kettle</artifactId>
            <version>${wrapped.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>pentaho-reporting-engine</groupId>
            <artifactId>pentaho-reporting-engine-classic-extensions-toc</artifactId>
            <version>${wrapped.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>pentaho-reporting-engine</groupId>
            <artifactId>pentaho-reporting-engine-classic-extensions-mondrian</artifactId>
            <version>${wrapped.version}</version>
            <optional>true</optional>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>1.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <createSourcesJar>true</createSourcesJar>
                            <artifactSet>
                                <includes>
                                    <include>pentaho-reporting-engine:pentaho-reporting-engine-classic-core</include>
                                    <include>pentaho-reporting-engine:pentaho-reporting-engine-classic-extensions</include>
                                    <include>pentaho-reporting-engine:pentaho-reporting-engine-classic-extensions-scripting</include>
                                    <include>pentaho-reporting-engine:pentaho-reporting-engine-classic-extensions-reportdesigner-parser</include>
                                    <include>pentaho-reporting-engine:pentaho-reporting-engine-classic-extensions-drill-down</include>
                                    <include>pentaho-reporting-engine:pentaho-reporting-engine-classic-extensions-olap4j</include>
                                    <include>pentaho-reporting-engine:pentaho-reporting-engine-classic-extensions-kettle</include>
                                    <include>pentaho-reporting-engine:pentaho-reporting-engine-classic-extensions-toc</include>
                                    <!--<include>pentaho-reporting-engine:pentaho-reporting-engine-classic-extensions-mondrian</include>-->
                                </includes>
                            </artifactSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.springsource.bundlor</groupId>
                <artifactId>com.springsource.bundlor.maven</artifactId>
                <executions>
                    <execution>
                        <id>build-manifest</id>
                        <goals>
                            <goal>bundlor</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <inputPath>${project.build.directory}/${project.build.finalName}.${project.packaging}
                            </inputPath>
                            <outputPath>${basedir}/src/main/resources</outputPath>
                            <!-- used to properly set-up versions for system packages -->
                            <osgiProfilePath>${basedir}/../../../../../java6-server.profile</osgiProfilePath>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-bundle</id>
                        <goals>
                            <goal>bundlor</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <inputPath>${project.build.directory}/${project.build.finalName}.${project.packaging}
                            </inputPath>
                            <outputPath>${project.build.directory}/${project.build.finalName}.${project.packaging}
                            </outputPath>
                            <!-- used to properly set-up versions for system packages -->
                            <osgiProfilePath>${basedir}/../../../../../java6-server.profile</osgiProfilePath>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>