<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>org.flowframe.thirdparty</artifactId>
		<groupId>org.flowframe</groupId>
		<version>0.0.1</version>
		<relativePath>..</relativePath>
	</parent>
	<artifactId>org.flowframe.thirdparty.org.jvnet.hyperjaxb3</artifactId>
	<version>0.5.7.SNAPSHOT</version>
	<name>org.jvnet.hyperjaxb3 Runtime</name>
	<description>org.jvnet.hyperjaxb3 Runtime</description>
	<repositories>
		<repository>
			<id>jvnet-nexus-snapshots</id>
			<name>Java.net Nexus Snapshots Repository</name>
			<url>https://maven.java.net/content/repositories/snapshots</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>org.highsource.repository.maven2.releases</id>
			<name>http://repository.highsource.org/maven2/releases/</name>
			<url>http://repository.highsource.org/maven2/releases/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>org.highsource.repository.maven2.snapshots</id>
			<name>http://repository.highsource.org/maven2/snapshots/</name>
			<url>http://repository.highsource.org/maven2/snapshots/</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>
	<dependencies>
		<dependency>
			<groupId>org.jvnet.hyperjaxb3</groupId>
			<artifactId>hyperjaxb3-ejb-runtime</artifactId>
			<version>0.5.7-SNAPSHOT</version>
			<optional>true</optional>
		</dependency>
		<dependency>
		    <groupId>org.apache.commons</groupId>
		    <artifactId>com.springsource.org.apache.commons.lang</artifactId>
		    <version>2.5.0</version>
		</dependency>		
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>1.4</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<createSourcesJar>false</createSourcesJar>
							<artifactSet>
								<includes>
									<include>org.jvnet.hyperjaxb3:*</include>
								</includes>
							</artifactSet>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.springsource.bundlor</groupId>
				<artifactId>com.springsource.bundlor.maven</artifactId>
				<executions>
					<execution>
						<id>build-manifest</id>
						<goals>
							<goal>bundlor</goal>
						</goals>
						<phase>package</phase>
						<configuration>
							<inputPath>${project.build.directory}/${project.build.finalName}.${project.packaging}</inputPath>
							<outputPath>${basedir}/src/main/resources</outputPath>
							<!-- used to properly set-up versions for system packages -->
							<osgiProfilePath>${basedir}/../../java6-server.profile</osgiProfilePath>
						</configuration>
					</execution>
					<execution>
						<id>generate-bundle</id>
						<goals>
							<goal>bundlor</goal>
						</goals>
						<phase>package</phase>
						<configuration>
							<inputPath>${project.build.directory}/${project.build.finalName}.${project.packaging}</inputPath>
							<outputPath>${project.build.directory}/${project.build.finalName}.${project.packaging}</outputPath>
							<!-- used to properly set-up versions for system packages -->
							<osgiProfilePath>${basedir}/../../java6-server.profile</osgiProfilePath>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>