<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>org.flowframe.thirdparty.jackrabbit.version160</artifactId>
    <groupId>org.flowframe</groupId>
    <version>0.0.1</version>
    <relativePath>..</relativePath>
  </parent>
  <version>1.6.0</version>
  <artifactId>org.flowframe.thirdparty.jackrabbit.version160.core</artifactId>
	<properties>
		<wrapped.version>1.6.0</wrapped.version>
	</properties>
	<dependencies>		
		<dependency>
			<groupId>org.apache.jackrabbit</groupId>
			<artifactId>jackrabbit-core</artifactId>
			<version>${wrapped.version}</version>
			<exclusions>
				<exclusion><!-- 1.3.4 : dependency org="edu.oswego.cs.concurrent" name="com.springsource.edu.oswego.cs.dl.util.concurrent" rev="1.3.4"-->
					<groupId>concurrent</groupId>
					<artifactId>concurrent</artifactId>
				</exclusion>
				<exclusion><!-- 3.1 -->
					<groupId>commons-collections</groupId>
					<artifactId>commons-collections</artifactId>
				</exclusion>
				<exclusion><!-- 1.4-->
					<groupId>commons-io</groupId>
					<artifactId>commons-io</artifactId>
				</exclusion>				
				<exclusion><!-- 3.2-FINAL-->
					<groupId>org.apache.poi</groupId>
					<artifactId>poi</artifactId>
				</exclusion>
				<exclusion><!-- 3.2-FINAL-->
					<groupId>org.apache.poi</groupId>
					<artifactId>poi-scratchpad</artifactId>
				</exclusion>		
				<exclusion><!-- 0.7.3-->
					<groupId>pdfbox</groupId>
					<artifactId>pdfbox</artifactId>
				</exclusion>	
				<exclusion><!-- 0.1.0-->
					<groupId>org.fontbox</groupId>
					<artifactId>fontbox</artifactId>
				</exclusion>		
				<exclusion><!-- 0.2.0-->
					<groupId>org.jempbox</groupId>
					<artifactId>jempbox</artifactId>
				</exclusion>	
				<exclusion><!-- 1.9.7-->
					<groupId>net.sourceforge.nekohtml</groupId>
					<artifactId>nekohtml</artifactId>
				</exclusion>
				<exclusion><!-- 2.8.1-->
					<groupId>xerces</groupId>
					<artifactId>xercesImpl</artifactId>
				</exclusion>	
				<exclusion><!-- 1.3.03-->
					<groupId>xml-apis</groupId>
					<artifactId>xml-apis</artifactId>
				</exclusion>	
				<exclusion><!-- 1.5.3-->
					<groupId>org.slf4j</groupId>
					<artifactId>slf4j-api</artifactId>
				</exclusion>	
				<exclusion><!-- 2.4.1-->
					<groupId>org.apache.lucene</groupId>
					<artifactId>lucene-core</artifactId>
				</exclusion>		
				<exclusion><!-- 10.2.1.6-->
					<groupId>org.apache.derby</groupId>
					<artifactId>derby</artifactId>
				</exclusion>																													
				<exclusion><!-- 1.1-->
					<groupId>commons-logging</groupId>
					<artifactId>commons-logging</artifactId>
				</exclusion>
				<exclusion><!-- 1.2.13-->
					<groupId>log4j</groupId>
					<artifactId>log4j</artifactId>
				</exclusion>
				<exclusion><!-- 2.0.0 -->
				    <groupId>javax.jcr</groupId>
				    <artifactId>javax.jcr</artifactId>
				</exclusion>													
			</exclusions>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>1.4</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<createSourcesJar>true</createSourcesJar>
							<artifactSet>
<!-- 								<excludes>
									<exclude>org.apache.commons.vfs.*:*</exclude>
								</excludes> -->
							</artifactSet>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.springsource.bundlor</groupId>
				<artifactId>com.springsource.bundlor.maven</artifactId>
				<executions>
					<execution>
						<id>build-manifest</id>
						<goals>
							<goal>bundlor</goal>
						</goals>
						<phase>package</phase>
						<configuration>
							<inputPath>${project.build.directory}/${project.build.finalName}.${project.packaging}</inputPath>
							<outputPath>${basedir}/src/main/resources</outputPath>
							<!-- used to properly set-up versions for system packages -->
							<osgiProfilePath>${basedir}/../../../../java6-server.profile</osgiProfilePath>
						</configuration>
					</execution>
					<execution>
						<id>generate-bundle</id>
						<goals>
							<goal>bundlor</goal>
						</goals>
						<phase>package</phase>
						<configuration>
							<inputPath>${project.build.directory}/${project.build.finalName}.${project.packaging}</inputPath>
							<outputPath>${project.build.directory}/${project.build.finalName}.${project.packaging}</outputPath>
							<!-- used to properly set-up versions for system packages -->
							<osgiProfilePath>${basedir}/../../../../java6-server.profile</osgiProfilePath>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>      
</project>