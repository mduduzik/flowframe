<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>org.flowframe.thirdparty</artifactId>
		<groupId>org.flowframe</groupId>
		<version>0.0.1</version>
		<relativePath>..</relativePath>
	</parent>
	<artifactId>org.flowframe.thirdparty.org.jvnet.jaxb2_commons</artifactId>
	<name>org.flowframe.thirdparty.org.jvnet.jaxb2_commons</name>
	<version>0.6.4.SNAPSHOT</version>
	<properties>
		<wrapped.version>0.6.4-SNAPSHOT</wrapped.version>
	</properties>
	<dependencies>
		<dependency>
			<groupId>org.jvnet.jaxb2_commons</groupId>
			<artifactId>jaxb2-basics-runtime</artifactId>
			<version>0.6.4-SNAPSHOT</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>1.4</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<createSourcesJar>false</createSourcesJar>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.springsource.bundlor</groupId>
				<artifactId>com.springsource.bundlor.maven</artifactId>
				<executions>
					<execution>
						<id>build-manifest</id>
						<goals>
							<goal>bundlor</goal>
						</goals>
						<phase>package</phase>
						<configuration>
							<inputPath>${project.build.directory}/${project.build.finalName}.${project.packaging}</inputPath>
							<outputPath>${basedir}/src/main/resources</outputPath>
							<!-- used to properly set-up versions for system packages -->
							<osgiProfilePath>${basedir}/../../java6-server.profile</osgiProfilePath>
						</configuration>
					</execution>
					<execution>
						<id>generate-bundle</id>
						<goals>
							<goal>bundlor</goal>
						</goals>
						<phase>package</phase>
						<configuration>
							<inputPath>${project.build.directory}/${project.build.finalName}.${project.packaging}</inputPath>
							<outputPath>${project.build.directory}/${project.build.finalName}.${project.packaging}</outputPath>
							<!-- used to properly set-up versions for system packages -->
							<osgiProfilePath>${basedir}/../../java6-server.profile</osgiProfilePath>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>