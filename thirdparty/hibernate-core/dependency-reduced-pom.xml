<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>org.flowframe.thirdparty</artifactId>
    <groupId>org.flowframe</groupId>
    <version>0.0.1</version>
    <relativePath>..</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>org.flowframe.thirdparty.hibernate.core</artifactId>
  <name>org.flowframe.thirdparty.hibernate.core</name>
  <version>3.6.0.Final</version>
  <description>Hibernate Core 3.6.0.Final OSGi bundle</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.4</version>
        <executions>
          <execution>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <createSourcesJar>true</createSourcesJar>
              <artifactSet>
                <excludes>
                  <exclude>org.hibernate:jtidy</exclude>
                  <exclude>org.hibernate:hibernate-tools</exclude>
                  <exclude>com.conx.awbtracker:com.conx.awbtracker.hibernate.annotations.commons</exclude>
                </excludes>
                <includes>
                  <include>org.hibernate:*</include>
                </includes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.springsource.bundlor</groupId>
        <artifactId>com.springsource.bundlor.maven</artifactId>
        <executions>
          <execution>
            <id>build-manifest</id>
            <phase>package</phase>
            <goals>
              <goal>bundlor</goal>
            </goals>
            <configuration>
              <inputPath>${project.build.directory}/${project.build.finalName}.${project.packaging}</inputPath>
              <outputPath>${basedir}/src/main/resources</outputPath>
              <osgiProfilePath>${basedir}/../../java6-server.profile</osgiProfilePath>
            </configuration>
          </execution>
          <execution>
            <id>generate-bundle</id>
            <phase>package</phase>
            <goals>
              <goal>bundlor</goal>
            </goals>
            <configuration>
              <inputPath>${project.build.directory}/${project.build.finalName}.${project.packaging}</inputPath>
              <outputPath>${project.build.directory}/${project.build.finalName}.${project.packaging}</outputPath>
              <osgiProfilePath>${basedir}/../../java6-server.profile</osgiProfilePath>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.flowframe</groupId>
      <artifactId>org.flowframe.thirdparty.hibernate.annotations.commons</artifactId>
      <version>3.2.0.Final</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.antlr</groupId>
      <artifactId>com.springsource.antlr</artifactId>
      <version>2.7.6</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>com.springsource.org.apache.commons.collections</artifactId>
      <version>3.2.1</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.dom4j</groupId>
      <artifactId>com.springsource.org.dom4j</artifactId>
      <version>1.6.1</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>javax.persistence</groupId>
      <artifactId>com.springsource.javax.persistence</artifactId>
      <version>2.0.0</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>javax.transaction</groupId>
      <artifactId>com.springsource.javax.transaction</artifactId>
      <version>1.1.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>javax.validation</groupId>
      <artifactId>com.springsource.javax.validation</artifactId>
      <version>1.0.0.GA</version>
      <scope>compile</scope>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>net.sourceforge.cglib</groupId>
      <artifactId>com.springsource.net.sf.cglib</artifactId>
      <version>2.2.0</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.flowframe</groupId>
      <artifactId>org.flowframe.thirdparty.javassist</artifactId>
      <version>3.12.0.GA</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.flowframe</groupId>
      <artifactId>org.flowframe.thirdparty.asm</artifactId>
      <version>3.3.1</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>com.springsource.slf4j.api</artifactId>
      <version>1.6.1</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>com.springsource.slf4j.org.apache.commons.logging</artifactId>
      <version>1.6.1</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>ch.qos.logback</groupId>
      <artifactId>com.springsource.ch.qos.logback.classic</artifactId>
      <version>0.9.24</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>ch.qos.logback</groupId>
      <artifactId>com.springsource.ch.qos.logback.core</artifactId>
      <version>0.9.24</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>org.springframework.instrument</artifactId>
      <version>3.1.3.RELEASE</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <properties>
    <wrapped.version>3.6.0.Final</wrapped.version>
  </properties>
</project>

