	<artifactId>org.flowframe.erp.integration.adaptors.stripe.webhooks.service.impl</artifactId>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1-beta-1</version>
