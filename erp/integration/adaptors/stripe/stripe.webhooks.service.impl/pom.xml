		<dependency>
			<groupId>org.flowframe</groupId>
			<artifactId>org.flowframe.thirdparty.stripe-java</artifactId>
			<version>1.2.2</version>
		</dependency>
		<dependency>
			<groupId>org.flowframe</groupId>
			<artifactId>org.flowframe.thirdparty.stripe-java</artifactId>
			<version>1.2.2</version>
